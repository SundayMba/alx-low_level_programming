# compiler
CC = gcc

# source files
SRC = main.c school.c

# object files from source files
OBJ = $(SRC:.c=.o)

# name of the executable
NAME = school

# all rule for the execuatable
all: $(NAME)

# executable target
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o school

%.o: %.c
	$(CC) -c $< -o $@

clean:
	rm -f *.o

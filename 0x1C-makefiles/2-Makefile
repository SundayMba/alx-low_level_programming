# compiler
CC = gcc

# source files
SRC = main.c school.c

# object files from source files
OBJ = $(SRC:.c=.o)

# name of the executable
NAME = school

# all rule for the execuatable
all: $(NAME)

# executable target
# #^ expands to the dependencies
# $@ expand to the target
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o school

main.o: main.c
	$(CC) -c -o main.o main.c

school.o: school.c
	$(CC) -c -o school.o school.c

clean:
	rm -f *.o
